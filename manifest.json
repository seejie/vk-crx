{
  "name": "vipkid",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "try to do something for better",
  "author": "liusijie@vipkid.com.cn",
  "icons": {
		"16": "images/logo.png",
		"48": "images/logo.png",
		"128": "images/logo.png"
	},
  "browser_action": {
    "default_icon": "images/logo.png",
    "default_title": "have a nice coding",
    "default_popup": "pages/popup.html"
  },
  "content_scripts": [{
    "matches": [
      "http://wiki.vipkid.com.cn/pages/resumedraft.action*",
      "http://wiki.vipkid.com.cn/pages/viewpage.action*"
    ],
    "js": ["global/base.js", "js/weeklyReport.js"]
  }, {
    "matches": ["https://code.vipkid.com.cn/*"],
    "js": ["global/base.js", "js/gitlab.js"]
  }],
  "background": {
    "scripts": ["global/base.js", "global/background.js"]
  },
  "options_page": "pages/options.html",
  "permissions": [
    "notifications",
    "storage",
    "cookies",
    "contextMenus",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
